# Azure Storage Exporter Configuration
# Copy this file to .env and fill in your values

# Required: Azure Subscription Details
AZURE_SUBSCRIPTION_ID=your-subscription-id-here
AZURE_STORAGE_ACCOUNT_NAME=your-storage-account-name
AZURE_RESOURCE_GROUP_NAME=your-resource-group-name

# Optional: Authentication Methods (choose ONE)
# Method 1: Storage Account Key (simplest, recommended for testing)
AZURE_STORAGE_ACCOUNT_KEY=your-storage-account-key-here

# Method 2: Service Principal (for production)
# Leave all empty to use DefaultAzureCredential (Managed Identity or Azure CLI)
AZURE_TENANT_ID=
AZURE_CLIENT_ID=
AZURE_CLIENT_SECRET=

# Optional: Exporter Configuration
EXPORTER_PORT=9358
SCRAPE_INTERVAL_SECONDS=300
LOG_LEVEL=INFO  # Valid values: DEBUG, INFO, WARNING, ERROR, CRITICAL

# Performance Optimization
CACHE_TTL_SECONDS=900          # Cache duration (default: 900s = 15 minutes)
                               # Increase for large accounts: 1800 (30m), 3600 (1h), or 21600 (6h)
MAX_WORKERS=10                 # Parallel container processing threads (default: 10)
                               # Increase for many containers: 20 for 30+ containers, 30 for 50+ containers
MAX_BLOBS_PER_CONTAINER=0      # Blob processing limit per container (0=unlimited, RECOMMENDED)
                               # Only set if you want to limit processing (reduces accuracy)
USE_SAMPLING=false             # Use statistical sampling (NOT RECOMMENDED - reduces accuracy)

# Optional: Azure Container Registry (for building and pushing)
ACR_NAME=your-acr-name
IMAGE_TAG=latest



